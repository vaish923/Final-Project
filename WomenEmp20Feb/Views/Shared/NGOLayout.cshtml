    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/ngostyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WomenEmp20Feb.styles.css" asp-append-version="true" />
</head>
<body>

	<div class="main-div-border">
        <div class="div1">
            <a class="heading" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
			@if(Context.Session.GetString("NGOid")==null)
			{
				<a class="heading" asp-area="" asp-controller="NGO" asp-action="NGOLogin" style="float: right; padding-right: 7px;"> Log In &nbsp&nbsp</a>
			}

			else{
		 	<a class="heading" asp-area="" asp-controller="NGO" asp-action="Logout" style="float: right; padding-right: 7px;"> Log Out &nbsp&nbsp</a>
			}
			 <a class="heading" asp-area="" asp-controller="Home" asp-action="ContactUs" style="float: right;">Contact Us &nbsp &nbsp</a>
        </div>
        <div class="div2">
            <img src="~/images/logo.jpg" class="logo">
            <p class="NGOtitle">
                Non Governmental Organizations (NGOs)</p>
        </div>
        <div class="menu-div">
			<a class="menu-div  "  style="margin-right: 60px;margin-left: 24px;" asp-area="" asp-controller="NGO" asp-action="Index">CRITERIA</a>
			<a  class="menu-div " style="margin-right: 100px;" asp-area="" asp-controller="NGO" asp-action="NGOList"> ORGANIZATIONS </a>
			<a  class="menu-div " style="margin-right: 100px;" asp-area="" asp-controller="NGO" asp-action="CourseList"> COURSES </a>
			<a class="menu-div"  style="margin-right: 100px;" asp-area="" asp-controller="NGO" asp-action="NGOFunding">FUNDING NORMS </a>
			@if (Context.Session.GetString("NGOid") == null)
			{
				<a class="menu-div" style="margin-right: 100px;" asp-area="" asp-controller="NGO" asp-action="Register">Register </a>
			}
			else
			@if(Context.Session.GetString("status")=="approved"){
				<a class="menu-div" style="margin-right: 100px;" asp-area="" asp-controller="NGO" asp-action="Create">Add Course </a>
			}
			
			<a class="menu-div" style="margin-right: 100px;" asp-area="" asp-controller="NGO" asp-action="GetNgoByIdStatus">STATUS</a>
			<a class="menu-div" asp-area="" asp-controller="NGO" asp-action="FAQ">FAQ</a>
           
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    <!-- Site footer -->
	<footer class="site-footer">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-6">
					<h6 class="hover-underline-animation">About</h6>
					<p class="text-justify">MINISTRY OF WOMEN & CHILD DEVELOPMENT is an organization, has been active for over 2 years helping the women to
                        become self independent.
                        We help them to grow and learn new skills. Our current focus is on the development of women in rural areas
                        with a vision to expand the services of the center, and create more such options in other parts of the
                        country.</p>
				</div>
	
				<div class="col-xs-6 col-md-3 ">
				<h6 class="hover-underline-animation">Contact Us</h6>
				<br>
				<p><span class="glyphicon glyphicon-map-marker"></span> Pune, Maharashtra</p>
				<p><span class="glyphicon glyphicon-phone"></span> +91 9898989898</p>
				<p><span class="glyphicon glyphicon-envelope"></span> mwcd@gmail.com</p>
				
