@model WomenEmp20Feb.Models.Course

@{
    Layout = "NGOLayout";
    ViewData["Title"] = "Create";
}

<div class="container middlecolor">
<div class="row">

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger fontsize"></div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label fontsize"></label>
                <input asp-for="CourseName" class="form-control fontsize" />
                <span asp-validation-for="CourseName" class="text-danger fontsize"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDescription" class="control-label fontsize"></label>
                <input asp-for="CourseDescription" class="form-control fontsize" />
                <span asp-validation-for="CourseDescription" class="text-danger fontsize"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseStartDate" class="control-label fontsize"></label>
                <input asp-for="CourseStartDate" class="form-control fontsize" />
                <span asp-validation-for="CourseStartDate" class="text-danger fontsize"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseEndDate" class="control-label fontsize"></label>
                <input asp-for="CourseEndDate" class="form-control fontsize" />
                <span asp-validation-for="CourseEndDate" class="text-danger fontsize"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntitialSeats" class="control-label fontsize"></label>
                <input asp-for="IntitialSeats" class="form-control fontsize" />
                <span asp-validation-for="IntitialSeats" class="text-danger fontsize"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Currentseats" class="control-label fontsize"></label>
                <input asp-for="Currentseats" class="form-control fontsize" />
                <span asp-validation-for="Currentseats" class="text-danger fontsize"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="TrainerId" class="control-label fontsize"></label>
                <input asp-for="TrainerId" class="form-control fontsize" />
               @* <select asp-for="TrainerId" class ="form-control"></select>*@
            </div>
            <div class="form-group">
                <label asp-for="Coursecategory" class="control-label fontsize"></label>
                <input asp-for="Coursecategory" class="form-control fontsize" />
                @*<select asp-for="Coursecategory" class ="form-control"></select>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary fontsize" />
            </div>
        </form>
    </div>
</div>

<div>
    @if(@ViewBag.SuccessMessage!=null){
         <p>@ViewBag.SuccessMessage</p>
    }
   
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
