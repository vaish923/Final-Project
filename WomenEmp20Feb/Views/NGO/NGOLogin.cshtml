                      <input type="submit" value="Login" class="btn btn-primary fontsize" />
                    @*<button type="button" class="btn btn-primary btn-lg">Register</button>*@
                  </div>

                </form>

              </div>
              <div class="col-md-8 col-lg-4 col-xl-5 d-flex align-items-center order-1 order-lg-2 ">

                <img src="~/images/ngologin.jpg" height="70%" class="img-fluid" alt="Sample image">

              </div>
